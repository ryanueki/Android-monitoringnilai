<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.seibah.monitoringnilai.Controller.ViewLogin">

    <EditText
        android:id="@+id/nama_siswa_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:ems="10"
        android:background="#757575"
        android:textColorHint="#000000"
        android:textColor="#000000"
        android:inputType="textPersonName"
        android:hint="@string/nama_siswa_login" />

    <EditText
        android:id="@+id/nisn_siswa_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nama_siswa_login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp"
        android:background="#757575"
        android:ems="10"
        android:hint="@string/password_siswa_login"
        android:inputType="textPersonName"
        android:textColorHint="#000000"
        android:textColor="#000000"/>

    <Button
        android:id="@+id/login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nisn_siswa_login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="49dp"
        android:text="@string/login_button" />

    <TextView
        android:id="@+id/judul_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/nama_siswa_login"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="109dp"
        android:textSize="30sp"
        android:textColor="#FFFFFF"
        android:text="@string/judul_login" />
</RelativeLayout>
